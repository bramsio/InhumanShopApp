@using InhumanShopApp.Models.Product
@model ProductDeleteViewModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="delete-container">
            <div class="delete-body">
                <h3 class="accept-policy text-center">@Model.Name</h3>
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.Name</strong>?
                </p>
            </div>
            <div class="delete-footer d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>
                <div class="btn">
                    <a href="javascript:void(0);" onclick="goBack();">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/navigation.js" defer></script>

@section Styles {
    <link rel="stylesheet" href="~/css/product.css" />
}