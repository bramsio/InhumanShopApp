@using InhumanShopApp.Models.Veterinarian
@model IEnumerable<VeterinarianViewModel>


@{
    ViewData["Title"] = "All veterinarians";
}
<h2>@ViewData["Title"]</h2>

<table class="table transparent-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Tel num</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veterinarian in Model)
        {
            <tr>
                <td>@veterinarian.Name</td>
                <td>@veterinarian.Specialization</td>
                <td>@veterinarian.TelNumber</td>
                <td>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@veterinarian.Id" class="btn btn-info me-2 w-100">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/veterinarian.css" />
}