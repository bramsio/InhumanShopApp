@using InhumanShopApp.Models.Product
@model ProductDeleteViewModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="text-danger mt-3">
                    Are you sure you want to delete <strong>@Model.Name</strong>?
                </p>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Name" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                </form>
                <div class="action-button">
                    <a href="javascript:void(0);" onclick="goBack();" class="btn btn-warning">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/navigation.js" defer></script>