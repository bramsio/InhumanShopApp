@using InhumanShopApp.Infrastructure.Data.Models;
@using InhumanShopApp.Models.Account
@model ProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2>Your Profile</h2>

        <div>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Username:</strong> @Model.Email</p>
        </div>
        <div class="text-center mt-3">
            <a href="@Url.Action("ConfirmPassword", "Account", new { mode = 1 })" class="btn">Edit Profile</a>
            <a href="@Url.Action("ConfirmPassword", "Account", new { mode = 2 })" class="btn">Change Password</a>

        </div>
 
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}